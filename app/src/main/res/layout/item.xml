<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small"
    android:padding="@dimen/small">

    <ImageView
        android:id="@+id/item_iv"
        android:layout_width="@dimen/item_img_size"
        android:layout_height="@dimen/item_img_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/bb" />

    <TextView
        android:id="@+id/item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/large"
        android:layout_marginLeft="@dimen/small"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@android:color/black"
        android:textSize="@dimen/item_title_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_iv"
        tools:text="Album or song" />

    <TextView
        android:id="@+id/item_sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/large"
        android:layout_marginLeft="@dimen/small"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/item_subtitle_text_size"
        app:layout_constraintBottom_toBottomOf="@id/item_iv"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Artist or number" />

</androidx.constraintlayout.widget.ConstraintLayout>